{% comment %}
  Get The Look Section
  Save as: sections/get-the-look.liquid
{% endcomment %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="get-the-look-section section section--full-width color-{{ section.settings.color_scheme }}"
  style="{% if section.settings.desktop_height > 0 %}--desktop-height: {{ section.settings.desktop_height }}px;{% endif %}">
  <div class="section-content-wrapper">
    
    {%- comment -%} Left Side - Lifestyle Image {%- endcomment -%}
    <div class="lifestyle-media">
      {%- if section.settings.lifestyle_image != blank -%}
        <img
          src="{{ section.settings.lifestyle_image | image_url: width: 800 }}"
          alt="{{ section.settings.lifestyle_image.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.lifestyle_image.width }}"
          height="{{ section.settings.lifestyle_image.height }}"
        >
      {%- else -%}
        <div class="placeholder-image">
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Right Side - Product Card {%- endcomment -%}
    <div class="product-card-container">
      {%- if section.settings.heading != blank -%}
        <h2 class="get-the-look-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.product != blank -%}
        {%- assign product = section.settings.product -%}
        
        <div class="gtl-product-card">
          {%- comment -%} Product Image {%- endcomment -%}
          <div class="gtl-product-card__image">
            {%- if product.featured_image -%}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                width="{{ product.featured_image.width }}"
                height="{{ product.featured_image.height }}"
              >
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>

          {%- comment -%} Product Info {%- endcomment -%}
          <div class="gtl-product-card__info">
            <h3 class="gtl-product-card__title">{{ product.title }}</h3>
            
            {%- if section.settings.show_vendor and product.vendor != blank -%}
              <p class="gtl-product-card__vendor">{{ product.vendor }}</p>
            {%- endif -%}
            
            <div class="gtl-product-card__price">
              {%- if product.compare_at_price > product.price -%}
                <span class="gtl-price gtl-price--on-sale">{{ product.price | money }}</span>
                <span class="gtl-price gtl-price--compare">{{ product.compare_at_price | money }}</span>
              {%- else -%}
                <span class="gtl-price">{{ product.price | money }}</span>
              {%- endif -%}
            </div>

            {%- if section.settings.show_button -%}
              <a href="{{ product.url }}" class="button button--primary gtl-product-card__button">
                {{ section.settings.button_text | default: 'Shop Now' }}
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- else -%}
        <div class="gtl-product-card placeholder">
          <div class="gtl-product-card__image">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          <div class="gtl-product-card__info">
            <h3 class="gtl-product-card__title">Product Title</h3>
            <p class="gtl-product-card__vendor">Brand Name</p>
            <div class="gtl-product-card__price">
              <span class="gtl-price">â‚¬39.00</span>
            </div>
          </div>
        </div>
      {%- endif -%}
    </div>

  </div>
</div>

{% stylesheet %}
  .get-the-look-section .section-content-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
    max-width: 100%;
  }

  @media (min-width: 750px) {
    .get-the-look-section .section-content-wrapper {
      grid-template-columns: 1fr 1fr;
      height: var(--desktop-height, auto);
    }
  }

  /* Lifestyle Image */
  .lifestyle-media {
    width: 100%;
    height: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .lifestyle-media img,
  .lifestyle-media .placeholder-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 749px) {
    .lifestyle-media {
      aspect-ratio: 4/5;
    }
  }

  /* Product Card Container */
  .product-card-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
    background-color: var(--color-background);
  }

  @media (min-width: 750px) {
    .product-card-container {
      padding: 60px 40px;
    }
  }

  .get-the-look-heading {
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 32px;
    text-align: center;
    color: var(--color-foreground);
  }

  @media (max-width: 749px) {
    .get-the-look-heading {
      font-size: {{ section.settings.heading_font_size | default: 18 }}px;
    }
  }

  @media (min-width: 750px) {
    .get-the-look-heading {
      font-size: {{ section.settings.heading_font_size_desktop | default: 20 }}px;
      margin-bottom: 40px;
    }
  }

  /* Product Card */
  .gtl-product-card {
    max-width: 400px;
    width: 100%;
    padding: 24px;
    text-align: center;
  }

  @media (min-width: 750px) {
    .gtl-product-card {
      padding: 32px;
    }
  }

  .gtl-product-card__image {
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 20px;
    overflow: hidden;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gtl-product-card__image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .gtl-product-card__info {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .gtl-product-card__title {
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 0.5px;
    margin: 0;
    color: var(--color-foreground);
  }

  .gtl-product-card__vendor {
    font-size: 13px;
    margin: 0;
    color: var(--color-foreground);
    opacity: 0.8;
  }

  .gtl-product-card__price {
    font-size: 16px;
    font-weight: 600;
    margin: 8px 0;
    color: var(--color-foreground);
  }

  .gtl-product-card__price .gtl-price--on-sale {
    color: #c41e3a;
  }

  .gtl-product-card__price .gtl-price--compare {
    text-decoration: line-through;
    opacity: 0.5;
    margin-left: 8px;
    font-size: 14px;
  }

  .gtl-product-card__button {
    margin-top: 16px;
    width: 100%;
    padding: 12px 24px;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Placeholder */
  .placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.1;
  }
{% endstylesheet %}

